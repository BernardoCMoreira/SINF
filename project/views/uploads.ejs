<%- include('partials/common/header.ejs') %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include('partials/common/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('partials/common/topbar.ejs', {title: title}) %>

            <div class="container-fluid">

               

                <div class="container-fluid">

                    <div class="row d-flex justify-content-center">

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <form>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="SAFT-File">
                                    <label class="custom-file-label" for="SAFT-File">
                                        Choose a SAF-T File
                                    </label>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="row">
                                <div class="col">
                                    <h4 class="m-0 font-weight-bold text-primary">SAF-T files</h4>
                                </div>
                                <div class="col-xl-3 col-md-6 mb-4">
                                </div>
                            </div>
                        </div>
                        <div id="SAFT-list" class="card-body">
                            
                            <% for (let i = 0; i<fiscalYears.length; i++) { %>
                                <div class="container-fluid mb-3" id="fiscalYearContainer-<%= fiscalYears[i] %>">
                                    <h4 class="card-title">
                                        Fiscal Year: <%= fiscalYears[i] %>
                                    </h4>

                                    <% if( SAFTAccoutingFiles.has(fiscalYears[i]) ) { %>
                                        
                                        <div id="fiscalYear-<%= fiscalYears[i] %>-<%= SAFTAccoutingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File")[0] %>" class="custom-control custom-checkbox mb-3 ml-3">
                                            <input type="checkbox" class="custom-control-input" id="checkBox-<%= fiscalYears[i] %>-<%= SAFTAccoutingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File")[0] %>">
                                            <label class="custom-control-label" for="checkBox-<%= fiscalYears[i] %>-<%= SAFTAccoutingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File")[0] %>"><%= SAFTAccoutingFiles.get(fiscalYears[i]).AuditFile.Header.FileType + " " + "v" + SAFTAccoutingFiles.get(fiscalYears[i]).AuditFile.Header.AuditFileVersion %></label>
                                        </div>
                                    <% } %>

                                    <% if( SAFTBillingFiles.has(fiscalYears[i]) ) { %>
                                        <% let type = SAFTBillingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File"); %>
                                        <div id="fiscalYear-<%= fiscalYears[i] %>-<%= SAFTBillingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File")[0] %>" class="custom-control custom-checkbox mb-3 ml-3">
                                            <input type="checkbox" class="custom-control-input" id="checkBox-<%= fiscalYears[i] %>-<%= SAFTBillingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File")[0] %>">
                                            <label class="custom-control-label" for="checkBox-<%= fiscalYears[i] %>-<%= SAFTBillingFiles.get(fiscalYears[i]).AuditFile.Header.FileType.split(" File")[0] %>"><%= SAFTBillingFiles.get(fiscalYears[i]).AuditFile.Header.FileType + " " + "v" + SAFTBillingFiles.get(fiscalYears[i]).AuditFile.Header.AuditFileVersion %></label>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Divider -->
                                <hr class="sidebar-divider d-none d-md-block">
                            <%  } %>
                        </div>
                    </div>
                    <!-- /.container-fluid -->

                    <button id="removeFilesButton" type="button" class="btn btn-danger btn-lg float-right">Remove Files</button>
                </div>
                <!-- End of Main Content -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <script src="/js/uploads.js" defer></script>
        <script src="/js/removeUploadedFiles.js" defer></script>

        <%- include('partials/common/footer.ejs') %>