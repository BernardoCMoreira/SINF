<%- include('partials/common/header.ejs') %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include('partials/common/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <br>

            <%- /* include('partials/common/topbar.ejs') */ %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">DASH_FINANCIAL</h1>
                    <div class="col-8 col-md-4">

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="gender3">Fiscal Year</label>
                            </div>
                            <select class="custom-select" id="gender3">
                                <option selected>Choose...</option>
                                <option value="1">2018/2019</option>
                                <option value="2">2019/2020</option>
                                <option value="3">2020/2021</option>
                            </select>
                        </div>
                    </div>

                    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                            class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
                </div>

                <!-- KPIS -->
                <div class="row">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <%- include ('partials/financial/financial_kpi.ejs', {type: 'Assets', value: (currentAssets.total+nonCurrentAssets.total)/100000 }) %>    
                    </div>

                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <%- include ('partials/financial/financial_kpi.ejs', {type: 'Liabilities', value: 0/100000 }) %>    
                    </div>

                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <%- include ('partials/financial/financial_kpi.ejs', {type: 'Equity', value: 0/100000 }) %>    
                    </div>
                </div>

                <!-- Content Row -->
                <div class="row">

                    <div class="col-lg-6 mb-4">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h4 class="m-0 font-weight-bold text-primary"> Sales vs Cost of goods sold </h4>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                        aria-labelledby="dropdownMenuLink">
                                        <div class="dropdown-header">Period :</div>
                                        <a class="dropdown-item" href="#">2018-2019</a>
                                        <a class="dropdown-item" href="#">2017-2018</a>

                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <canvas id="lineChart"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="card border-left-primary shadow py-2">
                            
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Accounts receivable ($m)</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"> <%- (Math.round(((accountsReceivable/100000)) * 100) / 100).toFixed(2); %> </div>                                  
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="card border-left-primary shadow py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Accounts payable ($m)</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">5,277</div>

                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>

                        <div class="card border-left-primary shadow py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            EBITDA / EBIT ($m)</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">650 | 419 </div>

                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>



                    <div class="col-lg-6 mb-4">

                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h4 class="m-0 font-weight-bold text-primary"> Balance Sheet </h4>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                        aria-labelledby="dropdownMenuLink">
                                        <div class="dropdown-header">Period :</div>
                                        <a class="dropdown-item" href="#">2018-2019</a>
                                        <a class="dropdown-item" href="#">2017-2018</a>

                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>ID</th>
                                                <th>Value ($M)</th>
                                            </tr>
                                        </thead>
                                        <tbody>                                            
                                            <% currentAssets.asset.forEach(asset =>{ %>
                                                <% if(asset.value != 0) { %> 
                                                    <%- include('partials/financial/bs_assets', {asset: asset}); %>
                                                <% } %> 
                                            <% }); %> 
                                            
                                            <% nonCurrentAssets.asset.forEach(asset =>{ %>
                                                <% if(asset.value != 0) { %> 
                                                    <%- include('partials/financial/bs_assets', {asset: asset}); %>
                                                <% } %> 
                                            <% }); %> 
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Total ($M)</th>
                                                <th></th>
                                                <th><%- Math.round(((currentAssets.total + nonCurrentAssets.total)/100000)*100)/100 %></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>

                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">Assets</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">Liabilities</a></li>
                                        <li class="page-item"><a class="page-link" href="#">Equity</a></li>
                                    </ul>
                                </nav>

                            </div>
                        </div>

                        <!-- Approach -->

                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<%- include('partials/common/footer.ejs') %>