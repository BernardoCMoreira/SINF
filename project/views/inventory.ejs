<%- include('partials/common/header.ejs') %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include('partials/common/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('partials/common/topbar.ejs', {title: title}) %>

            <div class="container-fluid">

                <div class="d-sm-flex align-items-center justify-content-between mb-4">

                    <div class="col-8 col-md-4">

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="gender3">Fiscal Year</label>
                            </div>
                            <select class="custom-select" id="gender3">
                                <option selected>Choose...</option>
                                <% for (let i = 0; i<fiscalYears.length; i++) { %>
                                    <option value="<%= i %>"><%= fiscalYears[i] %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>

               </div>

                <div class="container-fluid">

                    <div class="row">

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Current inventory value (€m)</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%= currentInventoryValue.toFixed(2) %>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Total revenue (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total
                                                units in stock</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%= totalUnitsInStock %>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Total Sales (Monthly) Card Example -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Average Inventory Period</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">31 days</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="row">
                                <div class="col">
                                    <h4 class="m-0 font-weight-bold text-primary">Inventory</h4>
                                </div>
                                <div class="col-xl-3 col-md-6 mb-4">


                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Description</th>
                                            <th>Current stock</th>
                                            <th>Calculated Unit Cost (€)</th>
                                            <th>Last Unit Cost (€)</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% for (var product in products) { %>
                                            <tr>
                                                <td> <%= products[product].name %> </td>
                                                <td> <%= products[product].description %> </td>
                                                <td> <%= products[product].currentStock %> </td>
                                                <td> <%= products[product].unitPrice %> </td>
                                                <td> <%= products[product].lastUnitCost %> </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <%- paginator.render() %>
                        </div>
                    </div>
                    <!-- /.container-fluid -->


                </div>
                <!-- End of Main Content -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <%- include('partials/common/footer.ejs') %>