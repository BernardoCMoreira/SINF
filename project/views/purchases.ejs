<%- include('partials/common/header.ejs') %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include('partials/common/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <%- include('partials/common/topbar.ejs', {title: title}) %>


            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <%- include('partials/common/filterYear.ejs') %>

                <!-- Content Row -->
                <div class="row">

                    <!-- Total Purchases -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total
                                            Purchases(€M)
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            <%= totalPurchasesValue.toFixed(2) %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Debt to Suppliers-->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Accounts
                                            Payable(€M)
                                        </div>
                                        <% if(accountsPayable != null) { %>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"> <%- accountsPayable %>
                                            </div>
                                        <% } else { %>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"> 0 </div>
                                        <% } %>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">

                    <!-- Area Chart -->
                    <div class="col-xl-8 col-lg-7">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Purchases Overview</h6>
                            
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="chart-area">
                                    <canvas id="myAreaChart" data-monthnet="<%= monthlyPurchases %>"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pie Chart -->
                    <div class="col-xl-4 col-lg-5">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Top Suppliers</h6>
                                
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="chart-pie pt-4 pb-2">
                                    <canvas id="myPieChart" data-top5="<%= top5Suppliers %>"></canvas>
                                </div>
                                <div class="mt-4 text-center small">

                                    <span class="mr-2">
                                        <i hiddenclass="fas fa-circle text-primary"></i> This graph is a yearly graph
                                        that evaluates the top 5 suppliers
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">List of Suppliers</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Supplier</th>
                                        <th>Supplier_ID</th>
                                        <th>Account Payable</th>
                                        <th>Total Purchases</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% if(listSuppliers !== null) { %> 
                                        <% Object.keys(listSuppliers).forEach(key =>{ %>
                                        <tr>
                                            <td>
                                                <%= listSuppliers[key].name %>
                                            </td>
                                            <td>
                                                <%= listSuppliers[key].id %>
                                            </td>
                                            <td>
                                                <%= ((listSuppliers[key].debt)/1000000).toFixed(2) %>
                                            </td>
                                            <td>
                                                <%= ((listSuppliers[key].value)/1000000).toFixed(2) %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    <% }  %> 

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('partials/common/footer.ejs') %>